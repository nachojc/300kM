<?xml version='1.0' encoding='utf-8'?>
<widget id="com.club300km.main" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>300 kM</name>
    <description>
        Moteros
    </description>
    <author email="dnachojc@ipsoft.es" href="http://www.ipsoft.es">Nacho</author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <icon qualifier="ldpi" src="src/res/icon/android/icon-36-ldpi.png" />
        <icon qualifier="mdpi" src="src/res/icon/android/icon-48-mdpi.png" />
        <icon qualifier="hdpi" src="src/res/icon/android/icon-72-hdpi.png" />
        <icon qualifier="xhdpi" src="src/res/icon/android/icon-96-xhdpi.png" />
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="^6.2.3" />
    <engine name="ios" spec="^4.4.0" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
</widget>
